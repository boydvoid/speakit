<div class="container">
  {{title}}

  {{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">
    {{this.msg}}
  </div>
  {{/each}}
  {{/if}}
  <form action="/s/subspeaks" method="POST">
    <input type="text" name="name" placeholder="name">
    <input type="text" name="description" placeholder="description">
    <button type="submit">Submit</button>
  </form>
  <a href="/">Home</a>
</div>